!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %meta{:content => content_for?(:description) ? yield(:description) : 'Официальный сервисный центр "Мир Связи". Ремонт мобильных телефонов.', :name => "description"}
    %meta{content: "Sergy Nazarevich", name: "author"}
    %title= content_for?(:title) ? 'Cервисный центр "Мир Связи" | ' + yield(:title) : 'Cервисный центр "Мир Связи"'

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .body_wrap.gradient{style: 'min-height: 433px;'}
      .navbar-header
        .site-info
          %a{href: '/', class: 'navbar-brand logo'}
            %img{src: '/logo.png', class: 'logo-image'}
          .vk
            %a{href: 'https://vk.com/mirsvyazi_km', class: 'navbar-brand logo'}
              %img{src: '/vk.png', class: 'logo-image'}
          .fb
            %a{href: 'https://www.facebook.com/MirSvjazi/', class: 'navbar-brand logo'}
              %img{src: '/fb.png', class: 'logo-image'}
        = render partial: 'menu'
      .container
        = render partial: 'messages'
        = yield
      %footer.footer
        = render partial: 'footer'